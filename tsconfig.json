{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./src/public",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/tests", "**/*.spec.ts", "**/*.test.ts"]
}
